<div class="custom-product-info-section">
    <div class="container">
        <div class="cpis-box">
            <div class="cpis-left">
                <div class="cpisl-image">
                <div class="parent-with-dots">
                    {% if section.settings.image !=blank%}
                    <img src="{{section.settings.image | img_url:""}}" alt="{{ section.settings.image }}"/>
                    {%endif%}
                    <div class="color-box">
                        <span class="static-heading">color</span>
                        <span class="dynamic-heading">{{section.settings.color}}</span>
                    </div>
                    <div class="style-box">
                        <span class="static-heading">style</span>
                        <span class="dynamic-heading">{{section.settings.style}}</span>
                    </div>
                    <div class="material-box">
                        <span class="static-heading">Material</span>
                        <span class="dynamic-heading">{{section.settings.material}}</span>
                    </div>
                    </div>
                </div>
            </div>
            <div class="cpis-right">
             <div class="cpisr-content">
             <h2>{{section.settings.heading}}</h2>
             <span>{{section.settings.price}}</span>
             {{section.settings.rich_content}}
             <a class="view-btn slideshow__button button cta_btn" href="{{section.settings.btn_url}}">{{section.settings.btn_text}}</a>
             <ul class="img-list new">
                {% for block in section.blocks%}
            <li class="img-item new">
            <div class="img-box">
                {% if block.settings.image_new !=blank%}
                <img src="{{block.settings.image_new | img_url:""}}" alt="{{block.settings.image_new }}"/>
                {%endif%}
            </div>
            </li>
            {%endfor%}
            </ul>
             </div>
            </div>
    </div>
</div>
</div>
{% schema %}
{
"name": "Product Info Section",
"settings": [
    {
        "type":"image_picker",
        "id":"image",
        "label":"Image"
    },
    {
        "type":"text",
        "id":"color",
        "label":"Add Color"
    },
    {
        "type":"text",
        "id":"style",
        "label":"Add Style"
    },
    {
        "type":"text",
        "id":"material",
        "label":"Add Material"
    },
    {
        "type":"text",
        "id":"heading",
        "label":"Heading"
    },
    {
        "type":"text",
        "id":"price",
        "label":"Price"
    },
    {
        "type":"richtext",
        "id":"rich_content",
        "label":"Content"
    },
    {
        "type":"text",
        "id":"btn_text",
        "label":"Button Text"
    },
    {
        "type":"url",
        "id":"btn_url",
        "label":"Button Link"
    }

],
"max_blocks": 4,
"blocks": [
   {
     "name": "Add Image",
     "type": "block",
     "settings": [
       {
         "type": "image_picker",
         "id": "image_new",
         "label": "Upload Image"
       }
     ]
   }
],
"presets": [
{
"name": "Product Info Section",
"category": "ADVANCED LAYOUT"
}
]
}
{% endschema %}
